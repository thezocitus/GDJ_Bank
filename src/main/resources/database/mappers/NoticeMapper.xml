<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.winter.app.board.notice.NoticeDAO">
 
 
 
 
 	<!-- update -->
 
 	<select id="setUpdate" parameterType="BoardDTO">
 		UPDATE NOTICE SET 
 			
			BOARDNAME = #{boardName},
			
			BOARDCONTENTS = #{boardContents}
					
			WHERE BOARDNUM = #{boardNum}
 	</select>
 
 	<!-- List -->
 	<select id="getList" resultType="NoticeDTO" parameterType="Pager">
 		

 		SELECT * FROM
	 		(SELECT ROWNUM R, N.* FROM
	 			(SELECT * FROM NOTICE
	 			
	 			<include refid="search"/>
	 			
	 			 ORDER BY BOARDNUM DESC
	 			 ) N
	 		) RN
 		WHERE R BETWEEN #{startRow} AND #{lastRow}
 	</select>
 	
 	
 	
 	<sql id="search">
 	<where>
		<if test="kind=='kind1'">
			BOARDNAME LIKE '%'||#{search}||'%'
		</if>
 	 	<if test="kind=='kind2'">
			BOARDCONTENTS LIKE '%'||#{search}||'%'
		</if>
 		<if test="kind=='kind3'">
			BOARDWRITER LIKE '%'||#{search}||'%'
		</if> 		 		
 	</where> 	
 	</sql>
 	
 	
 	
 	<select id="getFileList" resultType="BoardFileDTO" parameterType="BoardDTO">
 	
 		SELECT FILENAME FROM NOTICEFILE WHERE BOARDNUM = #{boardNum}
 	 	
 	</select>
 	
 	
 	
 	<select id="getTotalCount" resultType="Long">
 		
 		SELECT COUNT(BOARDNUM) FROM NOTICE
 		
 	</select>
 	
 	
 	 	
 	<!-- detail -->
 	<resultMap type="NoticeDTO" id="getDetailResult">
 	
 		<id column="BOARDNUM" property="boardNum"/>
 		<result column="BOARDNAME" property="boardName"/>
 		<result column="BOARDWRITER" property="boardWriter"/>
 		<result column="BOARDCONTENTS" property="boardContents"/>
 		<result column="BOARDDATE" property="boardDate"/>
 		<result column="BOARDCOUNT" property="boardCount"/>
 		
 		<collection property="fileDTOs" javaType="List" ofType="boardFileDTO">
 			<id property="fileNum" column="FILENUM"/>
 			<result property="fileName" column="FILENAME"/>
 			<result property="origName" column="ORIGNAME"/>
 		</collection> 
 	
 	</resultMap>
 	
 	
 	<select id="getDetail" parameterType="BoardDTO" resultMap="getDetailResult">
 	
 		SELECT *
		FROM NOTICE N
		 	LEFT JOIN NOTICEFILE NF
		 	USING (BOARDNUM)
		WHERE BOARDNUM = #{boardNum}
 		
 	</select>
 	
 	<!-- add  -->
 	<insert id="setAdd" parameterType="BoardDTO">
 	<selectKey keyProperty="boardNum" resultType="Long" order="BEFORE">
 		SELECT BOARD_SEQ.NEXTVAL FROM DUAL
 	</selectKey>
 	
 		INSERT INTO NOTICE (BOARDNUM,BOARDNAME,BOARDWRITER,BOARDCONTENTS,BOARDDATE,BOARDCOUNT)
					VALUES (#{boardNum}, #{boardName}, #{boardWriter}, #{boardContents}, SYSDATE, 0)
 	
 	</insert>
 	
 	<!-- fileAdd -->
 	<insert id="setFileAdd" parameterType="BoardFileDTO">
 	
 		INSERT INTO NOTICEFILE (FILENUM,BOARDNUM,FILENAME,ORIGNAME)
		VALUES(BOARD_SEQ.NEXTVAL, #{boardNum}, #{fileName}, #{origName})
		
 	</insert>
 	
 	<!-- delete -->
 	<delete id="setDelete" parameterType="BoardDTO" >
 	
 	DELETE NOTICE WHERE BOARDNUM = #{boardNum}
 		
 	
 	</delete>
 	
 	<delete id="setFileDelete" parameterType="BoardFileDTO">
 	
 	DELETE NOTICEFILE WHERE BOARDNUM = #{boardNum}
 	
 	</delete>
 	
 </mapper>
 